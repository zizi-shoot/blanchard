{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-tabs": "off",
    "max-len": "off",
    "no-plusplus": "off",
    "no-param-reassign": "off",
    "no-unused-expressions": [
      "error",
      {
        "allowTernary": true
      }
    ]
  }
}
